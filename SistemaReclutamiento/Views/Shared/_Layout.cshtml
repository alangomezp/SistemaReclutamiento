<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Landing Page - Start Bootstrap Theme</title>

    <!-- Bootstrap core CSS -->
    @*<link href="template/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/fontawesome.js"></script>
    <script src="~/Scripts/solid.js"></script>
    <script src="~/Scripts/brands.js"></script>

    <!-- Custom fonts for this template -->
    <link href="~/Content/all.css" rel="stylesheet" />
    <link href="~/Content/simple-line-icons.css" rel="stylesheet" />
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <link href="~/Content/brands.css" rel="stylesheet" />
    <link href="~/Content/solid.css" rel="stylesheet" />

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template -->
    <link href="~/Content/landing-page.css" rel="stylesheet" />


</head>

<body style="padding:0px">

    <!-- Navigation -->

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"><b>Sistema de Reclutamiento.</b></a>
  

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active mr-3">
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="nav-item mr-3">
                    @Html.ActionLink("About", "About", "Home")
                </li>
                <li class="nav-item mr-3 ">
                    @Html.ActionLink("Contact", "Contact", "Home")
                </li>
              
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <button class="btn btn-primary" href="#" data-toggle="modal" data-target="#exampleModal3" type="button">Sign In <i class="icon-login"></i></button>
            </form>
        </div>
    </nav>


